{
  "name": "@21epub/create-parcel-react-library",
  "version": "0.0.3",
  "description": "CLI for easily bootstrapping ts react libraries and run demo using parcel",
  "repository": "21epub/create-parcel-react-library",
  "author": "garry",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "bin": {
    "create-parcel-react-library": "index.js"
  },
  "scripts": {
    "test": "ava -v && standard *.js lib/*.js",
    "release": "git fetch --tags && npx standard-version",
    "release:alpha": "npm run release -- --prerelease alpha"
  },
  "keywords": [
    "react",
    "npm",
    "typescript",
    "library",
    "module",
    "package",
    "parcel",
    "cli",
    "rollup",
    "babel",
    "publish"
  ],
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^5.0.0",
    "conf": "^2.2.0",
    "cp-file": "^6.0.0",
    "execa": "^4.0.0",
    "git-config-path": "^2.0.0",
    "github-username": "^5.0.1",
    "globby": "^11.0.0",
    "handlebars": "^4.7.4",
    "inquirer": "^7.1.0",
    "make-dir": "^3.0.2",
    "ora": "^4.0.3",
    "p-each-series": "^2.1.0",
    "parse-git-config": "^3.0.0",
    "validate-npm-package-name": "^3.0.0",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "ava": "^3.5.2",
    "rmfr": "^2.0.0",
    "standard": "^14.3.3"
  },
  "ava": {
    "failFast": true,
    "timeout": "10m",
    "files": [
      "index.test.js",
      "lib/**/*.test.js"
    ]
  },
  "files": [
    "template",
    "lib"
  ]
}
